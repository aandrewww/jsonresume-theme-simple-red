{{#if resume.skills.length}}
<section id="skills">
	<h3>Skills</h3>
  <section>
    {{#each resume.skills}}
    <div class="item">
      {{#if name}}
      <div class="name">
        {{name}}
      </div>
      {{/if}}
      {{#if level}}
      <div class="level">
        <em>{{level}}</em>
      </div>
      {{/if}}
      {{#if keywords.length}}
      <ul class="keywords">
        {{#each keywords}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
    {{/each}}
  </section>
</section>
{{/if}}
